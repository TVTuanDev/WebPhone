@if (!User.Identity!.IsAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Accounts" asp-controller="Accounts" asp-action="Login">Đăng nhập</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Accounts" asp-controller="Accounts" asp-action="Register">Đăng ký</a>
        </li>
    </ul>
}
else
{
    <div class="btn-group">
        <button type="button" class="btn" data-bs-toggle="dropdown" aria-expanded="false">
            Cá nhân
        </button>
        <ul class="dropdown-menu dropdown-menu-end wrap-none">
            <li><a class="nav-link text-dark" asp-area="Accounts" asp-controller="Manager" asp-action="InfoCustomer">Thông tin cá nhân</a></li>
            <li><a class="nav-link text-dark" asp-area="Products" asp-controller="CateProducts" asp-action="Index">Danh mục sản phẩm</a></li>
            <li><a class="nav-link text-dark" asp-area="Products" asp-controller="Products" asp-action="Index">Sản phẩm</a></li>
            <li><a class="nav-link text-dark" asp-area="Accounts" asp-controller="AdminAccount" asp-action="Index">Tài khoản</a></li>
            <li>
                <form asp-area="Accounts" asp-controller="Accounts" asp-action="Logout" method="post">
                    <button class="btn nav-link text-dark" type="submit">Đăng xuất</button>
                </form>
            </li>
        </ul>
    </div>
}
