@model CategoryProduct

@{
    ViewData["Title"] = "Xóa";
}

<h1>Xóa danh mục sản phẩm</h1>

<h3>Bạn có chắc muốn xóa không?</h3>
<div>
    <h4>Danh mục sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Tên danh mục</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">Ngày tạo</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateAt)
        </dd>
        <dt class = "col-sm-2">Ngày cập nhật</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdateAt)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại</a>
    </form>
</div>
