@model Product

@{
    ViewData["Title"] = "Thông tin sản phẩm";
}

<h1>Thông tin sản phẩm</h1>

<div>
    <h4>Sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Tên sản phẩm</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">Ảnh đại diện</dt>
        <dd class = "col-sm-10">
            <img src="@Model.Avatar" alt="Avatar" style="width:80px; height:auto;" />
        </dd>
        <dt class = "col-sm-2">Thông tin sản phẩm</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">Đơn giá</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">Giảm giá</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class = "col-sm-2">Ngày tạo</dt>
        <dd class = "col-sm-10">
            @Model.CreateAt.ToString("dd/MM/yyy HH:mm:ss")
        </dd>
        <dt class = "col-sm-2">Ngày cập nhật</dt>
        <dd class = "col-sm-10">
            @Model.UpdateAt?.ToString("dd/MM/yyy HH:mm:ss")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Sửa</a> |
    <a asp-action="Index">Quay lại</a>
</div>
