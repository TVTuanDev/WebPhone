@model LoginDTO
@{
    ViewData["Title"] = "Đăng nhập";
}

<h1>Đăng nhập</h1>
<hr />
<div class="row">
    <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="col-md-4">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger small"></span>
        </div>
        <div class="form-check">
            <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="remember" />
            <label asp-for="RememberMe" class="form-check-label" for="remember"></label>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Đăng nhập</button>
        </div>
    </form>
</div>
