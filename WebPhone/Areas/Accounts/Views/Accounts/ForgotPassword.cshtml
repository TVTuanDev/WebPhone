@{
    ViewData["Title"] = "Quên mật khẩu";
}

<h1>Quên mật khẩu</h1>
<hr />
<div class="row">
    <form asp-action="ForgotPassword" method="post" class="col-md-4">
        <div class="form-group">
            <label>Email quên mật khẩu</label>
            <input name="Email" class="form-control" value="@ViewData["Email"]" />
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Gửi mã xác thực</button>
        </div>
    </form>
</div>
