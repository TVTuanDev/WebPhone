@model EmailConfirmed
@{
    ViewData["Title"] = "Xác thực email";
}

<h1>Xác thực email</h1>
<hr />
<div class="row">
    <form asp-action="ConfirmEmail" method="post" class="col-md-4">
        <div class="form-group">
            <input type="hidden" asp-for="Email" value="@ViewBag.Email" />
        </div>
        <div class="form-group">
            <label asp-for="Code"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger small"></span>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Gửi</button>
        </div>
    </form>
</div>

